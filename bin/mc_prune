#!/usr/bin/env python

"""\
%prog -s significant_critics.pkl < raw_ratings_data.pkl > cleaned_data.pkl

Remove data corresponding to insignificant critics.

Returns a pickle dump again.
"""

import sys
import argparse
import pickle

from metacritic.metacritic import prune

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description=__doc__)
    parser.add_argument('-s', '--significant-critics',
                        required=True,
                        help="previously extracted dictionary of significant critics")
    args = parser.parse_args()
    significant_critics = pickle.loads(open(args.significant_critics).read())
    ratings_data = pickle.loads(sys.stdin.read())
    print pickle.dumps(prune(ratings_data, significant_critics))
